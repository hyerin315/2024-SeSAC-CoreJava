import java.util.Scanner;

public class OpDemo {

	public static void main(String[] args) {
		//이항연산자
		//+, -, ~ 연산자의 결과는 int
		//short su = 5; 
		//short result = ~su; //틸드를 했을 때, 결과는 int )
		
		//삼항 연산자
		//조건을 먼저 보지 않고, 참과 거짓을 먼저 비교함
		//short result = true ? 1970 : 3.14; // 에러 
		//-> 3.14로 인해 1970.0으로 자동 형변환이 먼저 되기 때문에 short에 들어갈  수 없음
		
		
		

		//문제
		java.util.Scanner sc = new java.util.Scanner(System.in);
		System.out.print("값 입력(초단위) : ");
		String time = sc.nextLine();
		int next1 = Integer.parseInt(time)/3600;
		int next2 = Integer.parseInt(time) - next1;
		System.out.print(time,"초는", next1,"시간", next2, "초 입니다");
		
		
		

	}

}
