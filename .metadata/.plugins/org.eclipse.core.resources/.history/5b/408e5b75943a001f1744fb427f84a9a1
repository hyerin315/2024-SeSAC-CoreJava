
public class Test2 {

	public static void main(String[] args) {
		// 이름 : 
		// 신장(cm) : 
		// 몸무게(kg) :
		// ~님은 BMI 지수 00.0이고 비만 전 단계 입니다.
		
		// 1) 이름 입력 받기
		System.out.print("이름 : \n");
		java.util.Scanner sc1 = new java.util.Scanner(System.in);
		String name = sc1.nextLine();
		
		// 2) 신장 입력 받기
		System.out.print("신장 : \n");
		java.util.Scanner sc2 = new java.util.Scanner(System.in);
		double cm = sc2.nextDouble();
		
		// 3) 몸무게 입력 받기
		System.out.print("몸무게 : \n");
		java.util.Scanner sc3 = new java.util.Scanner(System.in);
		double kg = sc3.nextDouble();
		
		// 4) BMI 지수 구하기
		// BMI 지수 공식 = 체중(kg)/키(cm)2제곱
		double bmi = kg/(cm*cm);
		
		// 5) BMI 지수에 따라 결과 출력하기
		// 지수에 따른 비만도
		// BMI < 18.5 = 저체중
		// 18.5 =< BMI =< 22.9 = 정상
		// 23 =< BMI =< 24.9 = 비만 전 단계
		// 25 =< BMI =< 29.9 = 1단계 비만
		// 30 =< BMI =< 34.9 = 2단계 비만
		// 35 =< BMI
		// 
		if (bmi < 18.5) {
			System.out.printf("%d님은 BMI 지수 %d이고 저체중 입니다.", name, bmi);
		} else if (bmi > 18.5) {
			System.out.printf("%d님은 BMI 지수 %d이고 저체중 입니다.", name, bmi); 
		}
		
		sc1.close();
		sc2.close();
		sc3.close();

	}

}
