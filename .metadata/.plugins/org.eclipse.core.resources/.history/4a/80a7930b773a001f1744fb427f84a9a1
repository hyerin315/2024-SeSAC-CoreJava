
public class VariableDemo {
	int eng = 100; //instance variable 인스턴스 변수 - static이 없고 main 안에 있지 않은 것
	static int math = 80; //class variable 클래스 변수 - static이 있고 main 안에 있지 않은 것 -> 제일 먼저 메모리에 올라옴 (static 덕분에)

	
	public static void main(String[] args) {
		//*변수 종류가 3가지인 이유는 위치가 다르고 사용하는 목적이 다르기 때문
		int kor = 90; //local variable  지역변수 - 중괄호 안에 있음
		
		System.out.printf("수학점수 = %d\n", math);
		

	}

}
